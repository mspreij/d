function _d
{
    local cur prev opts dir
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    
    ### fix the path to *.txt ###
    opts="$(ls /home/joe/.my_stuff/docs/*.txt | xargs basename -a | sed s/.txt//)"
    
    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
}
complete -F _d d
